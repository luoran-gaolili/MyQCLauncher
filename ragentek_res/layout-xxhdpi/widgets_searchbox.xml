<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    app:cardBackgroundColor="@color/custom_card"
    app:cardCornerRadius="2.5dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/custom_card">

    <RelativeLayout
        android:id="@+id/widget_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/pi_cell_width"
        android:paddingRight="@dimen/pi_cell_width"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/widget_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_pi_search"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="@string/hint_input_key_word"
            android:textColor="#999999"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:src="@drawable/ic_voice_search"
            android:tint="#8A000000"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
